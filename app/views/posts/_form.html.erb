<div class="container">
  <%= form_with(model: post, local: true) do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: '   Your title here', required: true %>

    <%= form.label :content %>
    <%= form.text_area :content, placeholder: 'Your content here', class: 'contentbox' %>

    <%= form.submit %>
  <%end%>
  <%= button_to "Back", root_url, :method => :get%>
</div>


